<Window x:Class="JSON_GOT.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:JSON_GOT"
        mc:Ignorable="d"
        Title="MainWindow" Height="450" Width="800">
    <Window.Background>
        <ImageBrush ImageSource="https://www.nme.com/wp-content/uploads/2019/05/dragonsgot.jpg"/>
    </Window.Background>
    <Grid>
        <Label Content="Game of Thrones Quote" HorizontalAlignment="Left" Margin="199,40,0,0" VerticalAlignment="Top" FontSize="36"/>
        <Label x:Name="lblQuote" Content="Label" HorizontalAlignment="Left" Margin="137,128,0,0" VerticalAlignment="Top" Height="214" Width="530" Background="#BFF9F8F8" Foreground="#FFBD3C0C" FontSize="18"/>
        <Button x:Name="btnGetQuote" Content="Get Quote" HorizontalAlignment="Left" Margin="300,347,0,0" VerticalAlignment="Top" Width="174" Height="46" Click="btnGetQuote_Click"/>

    </Grid>
</Window>
