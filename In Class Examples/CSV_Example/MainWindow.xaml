<Window x:Class="CSV_Example.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:CSV_Example"
        mc:Ignorable="d"
        Title="MainWindow" Height="450" Width="800">
    <Grid>
        <Button x:Name="btnValidate" Content="Validate" HorizontalAlignment="Left" Margin="487,49,0,0" VerticalAlignment="Top" Width="75" Click="btnValidate_Click"/>
        <Label Content="Please enter the filepath:" HorizontalAlignment="Left" Margin="35,42,0,0" VerticalAlignment="Top"/>
        <TextBox x:Name="txtFilepath" HorizontalAlignment="Left" Height="23" Margin="180,46,0,0" TextWrapping="Wrap" VerticalAlignment="Top" Width="302"/>
        <Button x:Name="btnProcess" Content="Process File" HorizontalAlignment="Left" Margin="63,112,0,0" VerticalAlignment="Top" Width="161" RenderTransformOrigin="0.5,0.5" Height="91" IsEnabled="False" Click="btnProcess_Click">
        </Button>
        <ListBox x:Name="lstFile" Margin="10,237,10,10">
            <ListBoxItem Content="OKlahoma"/>
        </ListBox>

    </Grid>
</Window>
